{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "target": "ES6",
    "module": "ES2015",
    "lib": ["ES6", "DOM"],
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "lib",
    "outDir": "dist/esm",
    "declarationDir": "types"
  },
  "include": ["lib"],
  "exclude": [
    "node_modules"
  ]
}
