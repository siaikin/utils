{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "noEmit": false,
    "module": "ES2015",
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
  ]
}
